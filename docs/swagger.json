            "properties": {
                "container_id": {
                    "description": "The ID of the container that simulates the volume",
                    "type": "string"
                },
                "id": {
                    "description": "The unique ID of the storage volume (autoincrement from DB)",
                    "type": "integer"
                },
                "name": {
